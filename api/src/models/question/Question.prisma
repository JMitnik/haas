type QuestionCondition {
    id: ID! @id
    conditionType: String!
    renderMin: Int
    renderMax: Int
    matchValue: String
}

type QuestionOption {
    id: ID! @id
    value: String!
    publicValue: String
}

type QuestionNode {
    id: ID! @id
    title: String!
    questionnaire: Questionnaire @relation(name: "QuestionnaireToQuestions")
    type: NodeType!
    isRoot: Boolean! @default(value: false)
    isLeaf: Boolean! @default(value: false)
    overrideLeaf: QuestionNode @relation(link: TABLE, name: "QNodeToOverrideLeaf")
    isOverrideLeafOf: QuestionNode @relation(name: "QNodeToOverrideLeaf")
    options: [QuestionOption] @relation (link: TABLE name: "QuestionNodeOptions", onDelete: CASCADE)
    children: [Edge] @relation (link: TABLE, name: "EdgeChildrenRelation", onDelete: CASCADE)
}
