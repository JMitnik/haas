type QuestionCondition {
    id: ID! @id
    conditionType: String!
    renderMin: Int
    renderMax: Int
    matchValue: String
}

type QuestionOption {
    id: ID! @id
    value: String!
    publicValue: String
}

type QuestionNode {
    id: ID! @id
    title: String!
    branchVal: String
    isRoot: Boolean! @default(value: false)
    questionType: NodeType!
    questionnaire: Questionnaire! @relation(name: "QuestionnaireQuestions")
    overrideLeaf: LeafNode
    conditions: [QuestionCondition]
    options: [QuestionOption]
    children: [QuestionNode]
    edgeChildren: [Edge] @relation (link: TABLE, name: "EdgeChildrenRelation")
}
