type QuestionCondition {
    id: ID! @id
    conditionType: String!
    renderMin: Int
    renderMax: Int
    matchValue: String
}

type QuestionOption {
    id: ID! @id
    value: String!
    publicValue: String
}

type QuestionNode {
    id: ID! @id
    questionnaire: Questionnaire @relation(name: "QuestionnaireToQuestions")
    title: String!
    branchVal: String
    isRoot: Boolean! @default(value: false)
    questionType: NodeType!
    questionnaire: Questionnaire! @relation(name: "QuestionnaireQuestions")
    overrideLeaf: LeafNode
    options: [QuestionOption] @relation (link: TABLE name: "QuestionNodeOptions", onDelete: CASCADE)
    children: [QuestionNode]
    edgeChildren: [Edge] @relation (link: TABLE, name: "EdgeChildrenRelation", onDelete: CASCADE)
}
