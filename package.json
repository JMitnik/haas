{
    "private": true,
    "homepage": ".",
    "workspaces": {
        "packages": [
            "api",
            "frontend/dashboard",
            "frontend/ui",
            "frontend/client"
        ],
        "nohoist": [
            "frontend/dashboard/webpack-dev-server",
            "**/babel-loader",
            "**/babel-jest"
        ]
    },
    "scripts": {
        "start": "concurrently \"yarn start:client\" \"yarn start:api\"",
        "start:api": "yarn workspace @haas/api start",
        "start:client": "yarn workspace @haas/client start",
        "start:dashboard": "yarn workspace @haas/dashboard start",
        "build:client": "yarn workspace @haas/client build",
        "build:api": "yarn workspace @haas/api generate && yarn workspace @haas/api build",
        "gen": "yarn server:gen && yarn dashboard:gen",
        "gen:api": "yarn workspace @haas/api generate",
        "gen:dashboard": "yarn workspace @haas/dashboard generate",
        "migrate:api": "yarn workspace @haas/api migrate",
        "seed:api": "yarn workspace @haas/api seed",
        "reset:api": "yarn workspace @haas/api reset"
    },
    "devDependencies": {
        "lerna": "^3.20.2",
        "concurrently": "^5.1.0"
    }
}
